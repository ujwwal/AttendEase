{
    "version": 2,
    "builds": [
        {
            "src": "api/index.py",
            "use": "@vercel/python",
            "config": {
                "runtime": "python3.12",
                "includeFiles": [
                    "app.py",
                    "config.py",
                    "models.py",
                    "email_utils.py",
                    "templates/**",
                    "static/**"
                ]
            }
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/api/index.py"
        },
        {
            "src": "/(.*)",
            "dest": "/api/index.py"
        }
    ],
    "crons": [
        {
            "path": "/api/cron/weekly-report",
            "schedule": "0 9 * * 0"
        }
    ]
}