{
    "version": 2,
    "builds": [
        {
            "src": "api/index.py",
            "use": "@vercel/python"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/api/index.py"
        }
    ],
    "crons": [
        {
            "path": "/api/cron/weekly-report",
            "schedule": "0 9 * * 0"
        }
    ]
}